{
    "functions": {
        "api/**/*.php": {
            "runtime": "vercel-php@0.6.0"
        }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/$1"
        }
    ],
    "build": {
        "config": {
            "includeFiles": [
                "api/connect.php"
            ]
        },
        "env": {
            "NOW_PHP_DEBUG": "1"
        }
    }
}