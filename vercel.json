{
    "functions": {
        "api/**/*.php": {
            "runtime": "vercel-php@0.6.0",
            "config": {
                "includeFiles": [
                    "api/connect.php"
                ]
            }
        }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/$1"
        }
    ],
    "build": {
        "env": {
            "NOW_PHP_DEBUG": "1"
        }
    }
}